<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <!-- Shape background color -->
        <solid android:color="@color/green" />

        <!-- Corner radius in dp -->
        <corners android:radius="8dp" />

        <!-- Add any other attributes you need, such as stroke and padding -->
        <stroke
            android:width="1dp"
            android:color="@color/green" />

        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
    </shape>
</item>
</selector>